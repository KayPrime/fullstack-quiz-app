<%- include("partials/header") %>
    <link rel="stylesheet" href="css/start.css">
    <title>Start Quiz</title>
    </head>

    <body>
        <%- include("partials/simple-header") %>
        <div class="container" style="min-height: 10vh;">
            <div class="score-board">
                <h1></h1>
            </div>
            <div style="min-height: 90vh;">
                <div class="welcome-msg d-flex flex-column align-items-center justify-content-center"
                    style="min-height: 90vh;">
                    <h1>Welcome! Click the button below to start the quiz</h1>
                    <button class="btn btn-dark btn-lg">Start Quiz</button>
                </div>
                <div class="quiz d-flex flex-column align-items-center justify-content-center"
                    style="display: none; min-height: 90vh;">
                    <div id="quiz-div mb-3">
                        <h3 id="question" class="fs-1"></h3>
                    </div>
                    <div class="answer-div">

                    </div>

                    <div class="d-grid">
                        <input type="submit" id="submit-btn" class="btn btn-dark btn-lg" style="display: none;">
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="js/quiz.js"></script>
    </body>

    </html>